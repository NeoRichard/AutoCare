<h1>Listing messages</h1>

<table>
  <tr>
    <th>From</th>
    <th>To</th>
    <th>Content</th>
    <th>Opened</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.from %></td>
    <td><%= message.to %></td>
    <td><%= message.content %></td>
    <td><%= message.opened %></td>
    <td><%= link_to 'Show', [current_user, message] %></td>
    <td><%= link_to 'Edit', edit_user_message_path(current_user, message) %></td>
    <td><%= link_to 'Destroy', [current_user, message], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "New Message", new_user_message_path(current_user) %>